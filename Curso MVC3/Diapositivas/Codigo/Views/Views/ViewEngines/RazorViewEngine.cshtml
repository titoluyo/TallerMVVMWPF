@model IEnumerable<Views.Models.Post>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>RazorViewEngine</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th></th>
            <th>
                Titulo
            </th>
            <th>
                Contenido
            </th>
        </tr>
    
    @foreach (var post in Model) {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=post.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=post.Id })
            </td>
            <td>
                @post.Titulo
            </td>
            <td>
                @post.Contenido
            </td>
        </tr>
    }
    
    </table>
</body>
</html>

