<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/ecommerce/site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>
<body>

<div id="main_container">
	<div id="header">
       <div class="top_right">
            <div class="languages">
                <div class="lang_text">Lenguajes:</div>
                <a href="#" class="lang"><img src="@Url.Content("~/Content/themes/ecommerce/images/es.gif")" alt="" title="" border="0" /></a>
                <a href="#" class="lang"><img src="@Url.Content("~/Content/themes/ecommerce/images/en.gif")" alt="" title="" border="0" /></a>       
            </div>
        </div>
        <div id="logo">
            <a href="@Url.Action("Index","Productos")"><img src="@Url.Content("~/Content/themes/ecommerce/images/logo.png")" alt="" title="" border="0" width="182" height="85" /></a>
	    </div>
    </div>
    
   <div id="main_content"> 
        <div id="menu_tab">
            <ul class="menu">
                <li>@Html.ActionLink("Home","Index","Productos")</li>
                <li class="divider"></li>
                <li>@*Link Admin aquí*@</li>
                <li class="divider"></li>                         
                <li><a href="#" class="nav">Comprar</a></li>
            </ul>
        </div><!-- end of menu tab -->

        <div class="left_content">
            <div class="title_box">Categorias</div>
            <ul class="left_menu">
                <li class="odd">@*Link libros aquí*@</li>
                <li class="even">@*Link deportes aquí*@</li>
            </ul> 
        </div><!-- end of left content --> 

        <div class="center_content">
   	        @RenderBody()
        </div><!-- end of center content -->

        <div class="right_content">
 
            <div class="title_box">Buscar</div>  
            <div class="border_box">
		        <input type="text" name="newsletter" class="newsletter_input" value="keyword"/>
                <a href="#" class="join">buscar</a>
            </div>  

   		    <div class="shopping_cart">
        	    <div class="title_box">Carro de compras</div>
                <div class="cart_details">
                    - <br />
                    <span class="border_cart"></span>
                    Total: <span class="price">-</span>
                </div>
                <div class="cart_icon"><a href="#" title=""><img src="@Url.Content("~/Content/themes/ecommerce/images/shoppingcart.png")" alt="" title="" width="35" height="35" border="0" /></a></div>
            </div>

        </div><!-- end of right content -->   
         
   </div><!-- end of main content -->

   <div class="footer">
        <div class="left_footer">
            <img src="@Url.Content("~/Content/themes/ecommerce/images/footer_logo.png")" alt="" title="" width="89" height="42"/>
        </div>
        
        <div class="center_footer">
            <br />
            <img src="@Url.Content("~/Content/themes/ecommerce/images/payment.gif")" alt="" title="" />
        </div>
        
        <div class="right_footer">
            <a href="#">home</a>
            <a href="#">sitemap</a>
            <a href="#">rss</a>
            <a href="#">cont�ctanos</a>
        </div>   
   </div>                 


</div>
<!-- end of main_container -->
</body>
</html>