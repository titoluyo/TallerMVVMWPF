<UserControl 
    x:Class="Wpf.DataBinding.Fundamentals.BindingToClrProperties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignHeight="365" d:DesignWidth="332">
    <Grid>
        <TextBlock Height="21" HorizontalAlignment="Left" Margin="4,21,0,0" Name="TextBlock1" VerticalAlignment="Top" Width="83" Text="First Name" />
        <TextBox Text="{Binding Path=FirstName}" Height="23" Margin="89,18,12,0" Name="TextBox1" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left" />
        <TextBlock Height="21" HorizontalAlignment="Left" Margin="4,51,0,0" Name="TextBlock2" Text="Last Name" VerticalAlignment="Top" Width="83" />
        <TextBox Height="23" Margin="89,48,12,0" Name="TextBox2" Text="{Binding Path=LastName}" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left" />
        <Button HorizontalAlignment="Left" Margin="89,88,0,0" Name="btnChangeFirstName" Width="122" Height="23" VerticalAlignment="Top" Click="btnChangeFirstName_Click">Change First Name</Button>
        <TextBlock Height="21" Margin="89,126,12,0" Name="TextBlock3" Text="simulate BLL changing data" VerticalAlignment="Top" />
    </Grid>
</UserControl>
